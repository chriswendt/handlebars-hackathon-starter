{{#if messages.errors}}
  <div class="alert alert-danger fade in">
    <button type="button" data-dismiss="alert" class="close"><span class="fa fa-times-circle-o"></span></button>
    {{#each messages.errors}}
      <div>{{this.msg}}</div>
    {{/each}}
  </div>
{{/if}}
{{#if messages.info}}
  <div class="alert alert-info fade in">
    <button type="button" data-dismiss="alert" class="close"><span class="fa fa-times-circle-o"></span></button>
    {{#each messages.info}}
      <div>{{this.msg}}</div>
    {{/each}}
  </div>
{{/if}}
{{#if messages.success}}
  <div class="alert alert-success fade in">
    <button type="button" data-dismiss="alert" class="close"><span class="fa fa-times-circle-o"></span></button>
    {{#each messages.success}}
      <div>{{this.msg}}</div>
    {{/each}}
  </div>
{{/if}}